---
layout: base.njk
title: Home
---

<div class="home">
  <h1>Recent Posts</h1>
  
  <ul class="post-list">
    {%- for post in collections.posts -%}
    <li class="post-item">
      <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      {% if post.data.description %}
      <p class="post-description">{{ post.data.description }}</p>
      {% endif %}
    </li>
    {%- endfor -%}
  </ul>
</div>
